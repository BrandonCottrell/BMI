<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMI.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Frame BackgroundColor="Blue" Padding="24" CornerRadius="0">
                <Label Text="BMI Calculator" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            
            <Editor x:Name="height_int" Placeholder="Please enter Height(in)" PlaceholderColor="Grey"/>
            
            <Editor x:Name="weight_int" Placeholder="Please enter Weight(lbs)" PlaceholderColor="Grey"/>
            
            <Button Text="Calculate" Clicked="Button_Clicked"/>
            
            <Label x:Name="BMI" Text=" " HorizontalTextAlignment="Center" TextColor="Green" FontSize="36"></Label>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
